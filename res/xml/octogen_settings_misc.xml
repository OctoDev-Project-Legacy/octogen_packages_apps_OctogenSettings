<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
	android:title="@string/misc_title"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

        <Preference
             android:key="wakelock_blocker"
             android:fragment="com.octogen.settings.fragments.WakeLockBlocker"
             android:title="@string/wakelock_blocker_title"
	     android:icon="@drawable/ic_settings_wakelocks" />

        <Preference
             android:id="@+id/alarm_blocker"
             android:fragment="com.octogen.settings.fragments.AlarmBlocker"
             android:title="@string/alarm_blocker"
	     android:icon="@drawable/ic_settings_alarmblock" />

        <com.octogen.settings.preferences.SystemSettingSwitchPreference
            android:key="mtp_dirty_hack"
            android:title="@string/enable_mtp_dirtyhack_title"
            android:summary="@string/enable_mtp_dirtyhack_summary"
            android:defaultValue="true"
	    android:icon="@drawable/ic_settings_mtp" />

    <com.octogen.settings.preferences.SystemSettingSwitchPreference
        android:key="toast_icon"
        android:title="@string/toast_icon_title"
        android:summary="@string/toast_icon_summary"
        android:defaultValue="false" />

</PreferenceScreen>
